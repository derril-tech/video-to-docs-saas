# Database
DATABASE_URL=postgresql://user:password@localhost:5432/voice_to_docs
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/voice_to_docs_test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TEST_URL=redis://localhost:6379/1

# S3/Storage
S3_BUCKET=voice-to-docs-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_ENDPOINT=https://s3.amazonaws.com

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# API Keys
OPENAI_API_KEY=your_openai_api_key
WHISPERX_API_KEY=your_whisperx_api_key

# External Services
NOTION_API_KEY=your_notion_api_key
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
JIRA_CLIENT_ID=your_jira_client_id
JIRA_CLIENT_SECRET=your_jira_client_secret

# WebRTC
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# Development
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Workers
ASR_WORKER_URL=http://localhost:8001
PUNCT_WORKER_URL=http://localhost:8002
CMD_WORKER_URL=http://localhost:8003
